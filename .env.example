# VaultSync Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# JWT Secret for authentication tokens
# Generate with: openssl rand -base64 32
# MUST be at least 32 characters
JWT_SECRET=

# =============================================================================
# DATABASE
# =============================================================================

# SQLite database path
DATABASE_URL=sqlite:vaultsync.db

# Maximum database connections in pool
DB_MAX_CONNECTIONS=5

# =============================================================================
# NODE IDENTIFICATION (for multi-terminal sync)
# =============================================================================

# Unique identifier for this terminal/node
# Leave empty to auto-generate a unique ID
NODE_ID=

# =============================================================================
# API SERVER
# =============================================================================

# Port to listen on
API_PORT=3000

# CORS allowed origins (comma-separated)
# Leave empty for permissive mode (development only!)
# Example: https://shop.example.com,https://admin.example.com
CORS_ALLOWED_ORIGINS=

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT token expiration in hours
JWT_EXPIRATION_HOURS=24

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limit (requests per second)
RATE_LIMIT_PER_SECOND=100
RATE_LIMIT_BURST=200

# Auth endpoints rate limit (stricter to prevent brute force)
AUTH_RATE_LIMIT_PER_SECOND=5
AUTH_RATE_LIMIT_BURST=10

# =============================================================================
# LOGGING
# =============================================================================

# Log level: trace, debug, info, warn, error
RUST_LOG=info

# =============================================================================
# PRICING PROVIDERS (Optional - will use mock if not configured)
# =============================================================================

# Pokemon TCG API (pokemontcg.io - free, optional API key for higher limits)
# Get key at: https://dev.pokemontcg.io/
POKEMON_TCG_API_KEY=

# TCGPlayer API (for Magic cards)
# TCGPLAYER_API_KEY=
# TCGPLAYER_SECRET=

# PriceCharting API (for sports cards, video games)
# PRICECHARTING_API_KEY=

# =============================================================================
# TAX SETTINGS
# =============================================================================

# Default tax rate as decimal (e.g., 0.08 for 8%)
# Can also be configured per-category in database
DEFAULT_TAX_RATE=0.0

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Price cache TTL in seconds (default: 1 hour)
PRICE_CACHE_TTL_SECONDS=3600

# Maximum cached price entries
PRICE_CACHE_MAX_ENTRIES=10000
